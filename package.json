{
  "name": "claude-guild",
  "version": "1.1.0",
  "description": "Comprehensive workflow integration for Claude Code via custom commands with intelligent parallel agent execution and dependency analysis",
  "main": "install.js",
  "bin": {
    "claude-guild": "./install.js"
  },
  "scripts": {
    "publish": "node publish.js",
    "publish-non-interactive": "node publish.js --no-interaction",
    "publish-direct": "npm publish --access public",
    "publish-legacy": "./publish.sh",
    "prepublishOnly": "npm run validate && npm run generate-core",
    "test-install": "node install.js --test-mode",
    "generate-core": "node scripts/generate-core.js",
    "validate": "node scripts/validate-system.js",
    "validate-setup": "node -e \"console.log('âœ… Validation passed')\"",
    "lint": "echo 'No linting configured yet'",
    "test": "npm run validate && npm run test-install",
    "test:integration": "node scripts/integration-test.js",
    "test:all": "npm run validate && npm run test-install && npm run test:integration",
    "version-patch": "npm version patch",
    "version-minor": "npm version minor",
    "version-major": "npm version major"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "@clack/prompts": "^0.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "agents",
    "parallel-execution",
    "workflow",
    "development",
    "automation",
    "architect",
    "engineer"
  ],
  "author": "Claude Guild Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/claude-guild/claude-guild.git"
  },
  "bugs": {
    "url": "https://github.com/claude-guild/claude-guild/issues"
  },
  "homepage": "https://github.com/claude-guild/claude-guild#readme",
  "files": [
    "install.js",
    "commands/",
    "templates/",
    "guideline/",
    "scripts/",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "preferGlobal": false,
  "private": false
}
